<!-- JavaScript for Modal and Chat -->
<script>
document.addEventListener("DOMContentLoaded", function () {
  // Modal controls
  const chatButton = document.getElementById("chatButton");
  const chatModal = document.getElementById("chatModal");
  const closeChat = document.getElementById("closeChat");
  const messageInput = document.getElementById("messageInput");
  const sendButton = document.getElementById("sendButton");
  const chatMessages = document.getElementById("chatMessages");
  const knowledgeBaseToggle = document.getElementById("knowledgeBaseToggle");

  chatButton.addEventListener("click", () => {
    chatModal.classList.remove("hidden");
    messageInput.focus();
  });

  closeChat.addEventListener("click", () => {
    chatModal.classList.add("hidden");
  });

  chatModal.addEventListener("click", (e) => {
    if (e.target === chatModal) {
      chatModal.classList.add("hidden");
    }
  });

  function addMessage(text, isUser = false, isLoading = false) {
    const messageDiv = document.createElement("div");
    messageDiv.className = `message ${isUser ? "user-message" : "bot-message"}`;
    if (isLoading) {
      messageDiv.className += " loading-message";
      messageDiv.innerHTML = `
        <div class="typing-indicator">
          <span></span>
          <span></span>
          <span></span>
        </div>
      `;
    } else {
      messageDiv.textContent = text;
    }
    chatMessages.appendChild(messageDiv);
    chatMessages.scrollTop = chatMessages.scrollHeight;
    return messageDiv;
  }

  async function sendMessage() {
    const text = messageInput.value.trim();
    if (!text) return;

    addMessage(text, true);
    messageInput.value = "";
    const loadingMessage = addMessage("", false, true);

    // Placeholder for Bedrock API call
    const endpoint = knowledgeBaseToggle.checked ? "/bedrock/invoke" : "/bedrock/query";
    try {
      // Replace this with your Bedrock API call
      const response = await fetch(`${endpoint}?text=${encodeURIComponent(text)}`);
      const data = await response.json();
      loadingMessage.remove();
      addMessage(data.response || "Placeholder response from Bedrock");
    } catch (error) {
      console.error("Error:", error);
      loadingMessage.remove();
      addMessage("Sorry, something went wrong. Please try again.");
    }
  }

  sendButton.addEventListener("click", sendMessage);
  messageInput.addEventListener("keypress", (e) => {
    if (e.key === "Enter") sendMessage();
  });
});
</script>